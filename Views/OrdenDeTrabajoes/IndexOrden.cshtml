@model IEnumerable<PCFIX.Models.OrdenDeTrabajo>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Lista de OrdenDeTrabajo</h5>
    					<div class="ibox-tools">
    						@Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary btn-sm"})
    					</div>
                    </div>
                    <div class="ibox-content">
    
    <table class="table table-striped initdataTable">
    	<thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaProblableEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caracteristicas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoEquipo.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoEstado.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMarca.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTrabajo.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Apellido)
            </th>
            <th>Acciones</th>
        </tr>
    	
    		</thead>
    	<tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaProblableEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEntrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caracteristicas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEquipo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEstado.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMarca.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTrabajo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
    			@Html.ActionLink("Detalles", "Details", new { id=item.ID }, new { @class = "btn btn-info btn-sm"})
                @Html.ActionLink("Editar", "Edit", new { id=item.ID }, new { @class = "btn btn-warning btn-sm"})
                @Html.ActionLink("Eliminar", "Delete", new { id=item.ID }, new { @class = "btn btn-danger btn-sm"})
            </td>
        </tr>
    }
    	</tbody>
    
    </table>
    
                    </div>
                </div>
            </div>
        </div>
     </div>
    
     
    @section Styles {
    	@Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    }
    
    @section Scripts {
    	@Scripts.Render("~/plugins/dataTables")
    
    	<script type="text/javascript">
    		$(document).ready(function () {
    
    			$('.initdataTable').DataTable({
    				pageLength: 25,
    				dom: '<"html5buttons"B>lTfgitp',
    				language: {
    					"url": "/locales/DatatableSpanish.json"
    				},
    				buttons: [
    					{ extend: 'copy' },
    					{ extend: 'csv' },
    					{ extend: 'excel', title: 'ExampleFile' },
    					{ extend: 'pdf', title: 'ExampleFile' },
    
    					{
    						extend: 'print',
    						customize: function (win) {
    							$(win.document.body).addClass('white-bg');
    							$(win.document.body).css('font-size', '10px');
    
    							$(win.document.body).find('table')
    								.addClass('compact')
    								.css('font-size', 'inherit');
    						}
    					}
    				]
    
    			});
    
    
    
    		});
    
    	</script>
    }
    
    
</body>
</html>
